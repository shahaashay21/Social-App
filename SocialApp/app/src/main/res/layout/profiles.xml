<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp">


            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/section_label"
                android:layout_centerHorizontal="true"
                android:text="Profiles" />

            <RelativeLayout
                android:id="@+id/relativeImage"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView">
                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Image"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="150dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeImage"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/section_label"
                android:text="User Name" />

            <EditText
                android:id="@+id/eUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_below="@+id/eUserName"
                android:layout_marginTop="28dp"
                android:text="Email"
                android:layout_toEndOf="@+id/section_label" />

            <EditText
                android:id="@+id/etEmailProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/eUserName"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_alignBaseline="@+id/etCity"
                android:layout_alignBottom="@+id/etCity"
                android:layout_toEndOf="@+id/section_label" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/etEmailProfiles"
                android:layout_below="@+id/etEmailProfiles"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_alignBaseline="@+id/etState"
                android:layout_alignBottom="@+id/etState"
                android:layout_toEndOf="@+id/section_label" />

            <EditText
                android:id="@+id/etState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/etEmailProfiles"
                android:layout_below="@+id/etCity"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_alignBaseline="@+id/etCountry"
                android:layout_alignBottom="@+id/etCountry"
                android:layout_toEndOf="@+id/section_label" />

            <EditText
                android:id="@+id/etCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/etEmailProfiles"
                android:layout_below="@+id/etState"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCountry"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/section_label"
                android:text="Profession" />

            <EditText
                android:id="@+id/etProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/etCountry"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:layout_alignBaseline="@+id/etAboutMe"
                android:layout_alignBottom="@+id/etAboutMe"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/etAboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/etProfession"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/etInterests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/etAboutMe"
                android:layout_marginTop="36dp"
                android:text="Interests" />

            <EditText
                android:id="@+id/etInterested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_alignBaseline="@+id/etInterests"
                android:layout_alignBottom="@+id/etInterests"
                android:layout_alignParentEnd="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etInterested"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:background="@drawable/button_submit_rounded"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
