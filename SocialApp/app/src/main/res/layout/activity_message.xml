<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.sjsu.socialapp.Message">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/message_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="88dp"
            android:ems="10"
            android:hint="Enter receiver email"
            android:inputType="textPersonName"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/message_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_user"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Subject:"
            android:inputType="textPersonName"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_subject"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:hint="Type your message here..."
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/send_button"
            style="@android:style/Widget.Material.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_body"
            android:layout_marginStart="57dp"
            android:layout_marginTop="43dp"
            android:background="@android:drawable/ic_menu_send"
            android:backgroundTint="@color/feed_item_border"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/send_button"
            android:layout_alignBottom="@+id/send_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="58dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="@color/feed_item_border" />

        <Button
            android:id="@+id/check_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/message_subject"
            android:layout_alignParentEnd="true"
            android:text="Check Email" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
