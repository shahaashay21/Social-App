<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/my_request"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="0dp"
        android:lineSpacingExtra="10sp"
        android:text="Friend Requests"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/link"
        android:typeface="normal" />

    <Button
        android:id="@+id/sent_request"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:lineSpacingExtra="10sp"
        android:text="Sent Requests"
        android:textColor="@color/link"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/search_user"
        style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_request"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName|textWebEmailAddress"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/section_label" />

    <ImageButton
        android:id="@+id/search_button"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/feed_item_bg"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_alignTop="@+id/search_user"
        android:layout_alignParentEnd="true" />

    <!--<ListView-->
        <!--android:id="@+id/friends_list_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_toEndOf="@+id/section_label" />-->
</RelativeLayout>
